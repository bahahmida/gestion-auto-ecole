<AnchorPane styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.UpdatePaiementController">
    <children>
        <VBox prefWidth="584.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>


            <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="553.0" spacing="10">
                <Label styleClass="title" text="ðŸ’° Modifier un Paiement" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" onAction="#close" prefHeight="40.0" prefWidth="48.0" styleClass="secondary-button" text="âœ•" />
            </HBox>

            <VBox spacing="20">
                <GridPane hgap="15" styleClass="formulaire" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150" minWidth="150" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
                    </columnConstraints>


                    <Label text="Montant :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="montantField" promptText="Montant du paiement" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label fx:id="montantErrorLabel" styleClass="error-label" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />


                    <Label text="Date Paiement :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="datePaiementPicker" disable="true" promptText="Date du paiement" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="datePaiementErrorLabel" styleClass="error-label" visible="false" managed="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />


                    <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextArea fx:id="descriptionField" prefHeight="100.0" prefWidth="250.0" promptText="Description du paiement" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>


                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" text="Enregistrer" />
                </HBox>
            </VBox>
        </VBox>
    </children>
