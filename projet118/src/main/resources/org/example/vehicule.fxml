<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1019.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.VehiculeController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="1021.0" styleClass="header">
            <HBox alignment="CENTER_LEFT" prefHeight="76.0" prefWidth="1002.0" spacing="20" styleClass="header">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>
                <children>
                    <Label prefHeight="46.0" prefWidth="283.0" styleClass="title" text="🚗 Véhicules" />
                    <Region prefHeight="40.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="406.0" spacing="5" styleClass="search-box">
                        <children>
                            <TextField fx:id="searchField" prefHeight="45.0" prefWidth="355.0" promptText="🔍 Rechercher un véhicule..." styleClass="search-field" />
                        </children>
                    </HBox>
                    <Button fx:id="addVehicleButton" minWidth="245.0" onAction="#openAddVehicleForm" prefHeight="46.0" prefWidth="232.0" styleClass="menu-button" text="AJOUTER VÉHICULE" />
                    <ImageView fx:id="notificationIcon" fitHeight="28.0" fitWidth="28.0" onMouseClicked="#openNotifications" pickOnBounds="true" preserveRatio="true" />
                </children>
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TabPane prefHeight="607.0" prefWidth="1027.0" styleClass="themed-tab-pane" BorderPane.alignment="CENTER">
            <tabs>
                <Tab closable="false" text="Informations Véhicule">
                    <content>
                        <VBox prefHeight="629.0" prefWidth="998.0" spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="21.0" prefWidth="966.0" spacing="10.0">
                                    <children>
                                        <ToggleButton fx:id="allFilter" prefHeight="6.0" prefWidth="118.0" text="Tous" />
                                        <ToggleButton fx:id="typeAFilter" text="Catégorie A" />
                                        <ToggleButton fx:id="typeBFilter" text="Catégorie B" />
                                        <ToggleButton fx:id="typeCFilter" minWidth="99.0" prefHeight="44.0" prefWidth="124.0" text="Catégorie C" />
                                    </children>
                                </HBox>
                                <TableView fx:id="vehiculesTable" prefHeight="512.0" prefWidth="972.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="iconColumn" prefWidth="50.0" />
                                        <TableColumn fx:id="immatriculationColumn" prefWidth="135.0" text="matriqule" />
                                        <TableColumn fx:id="marqueColumn" prefWidth="115.0" text="marque" />
                                        <TableColumn fx:id="modeleColumn" prefWidth="115.0" text="modéle" />
                                        <TableColumn fx:id="anneeFabricationColumn" prefWidth="100.0" text="année" />
                                        <TableColumn fx:id="kmActuelColumn" prefWidth="100.0" text="kilométrage" />
                                        <TableColumn fx:id="categorieColumn" prefWidth="100.0" text="catégorie" />
                                        <TableColumn fx:id="documentColumn" prefWidth="100.0" text="Document" />
                                        <TableColumn fx:id="historiqueColumn" prefWidth="100.0" text="Historique" />
                                        <TableColumn fx:id="actionColumn" prefWidth="157.5999755859375" text="Actions" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab closable="false" text="Maintenance">
                    <content>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TableView fx:id="entretienTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="iconMaintenanceColumn" prefWidth="50.0" />
                                        <TableColumn fx:id="idEntretienColumn" prefWidth="78.4000015258789" text="ID Entretien" />
                                        <TableColumn fx:id="idVehiculeColumn" prefWidth="119.20004272460938" text="matriqule" />
                                        <TableColumn fx:id="typeEntretienColumn" prefWidth="104.79998779296875" text="Type" />
                                        <TableColumn fx:id="dateEntretienColumn" prefWidth="100.79998779296875" text="date debut" />
                                        <TableColumn fx:id="dateEntretienColumn1" prefWidth="106.39999389648438" text="date fin" />
                                        <TableColumn fx:id="coutColumn" prefWidth="72.800048828125" text="Coût" />
                                        <TableColumn fx:id="factureColumn" prefWidth="150.0" text="Facture" />
                                        <TableColumn fx:id="actionMaintenanceColumn" prefWidth="100.0" text="Actions" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
