<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PaiementController">
    <children>
        <!-- Top Bar -->
        <VBox spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1000.0" styleClass="nav-bar">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <children>
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" prefHeight="103.0" prefWidth="989.0" spacing="20" styleClass="header">
                        <padding>
                            <Insets bottom="15" left="20" right="20" top="15" />
                        </padding>
                        <Label prefHeight="45.0" prefWidth="345.0" styleClass="title" text="💰 Gestion de Paiement" />
                        <Region HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="470.0" spacing="5" styleClass="search-box">
                            <TextField fx:id="searchField" prefHeight="45.0" prefWidth="355.0" promptText="🔍 Rechercher un candidat..." styleClass="search-field"/>
                        </HBox>
                    </HBox>
                </children>
            </HBox>
        </VBox>

        <!-- Table -->
        <TableView fx:id="paiementTable" layoutX="20.0" layoutY="110.0" styleClass="table-view" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="110.0">
            <columns>
                <TableColumn fx:id="iconColumn" prefWidth="63.20001220703125" text="" /> <!-- Colonne pour l'icône -->
                <TableColumn fx:id="cinColumn" prefWidth="98.39999389648438" text="CIN Candidat" /> <!-- CIN du candidat -->
                <TableColumn fx:id="nameColumn" prefWidth="152.0" text="Nom Candidat" /> <!-- Nom du candidat -->
                <TableColumn fx:id="paymentColumn" prefWidth="145.60003662109375" text="Payé/Total" /> <!-- Montant payé et total combinés -->
                <TableColumn fx:id="historiquePaiementColumn" prefWidth="134.39996337890625" text="Historique Paiement" /> <!-- Historique des paiements -->
                <TableColumn fx:id="actionsColumn" prefWidth="151.199951171875" text="Actions" /> <!-- Actions (modifier/supprimer) -->
            </columns>
        </TableView>
    </children>
</AnchorPane>
