<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="482.0" prefWidth="600.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.DocumentController">
    <children>
        <VBox spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="title" text="Documents du Candidat" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" onAction="#close" styleClass="secondary-button" text="✕" />
            </HBox>
            <VBox prefHeight="412.0" prefWidth="454.0" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <children>
                    <ListView fx:id="documentList" styleClass="formulaire" VBox.vgrow="ALWAYS" />
                    <HBox alignment="CENTER" spacing="10">
                        <children>
                            <Button fx:id="uploadDocButton" styleClass="primary-button">
                                <graphic>
                                    <HBox alignment="CENTER" spacing="5">
                                        <children>
                                            <Label text="➕ Ajouter" />
                                        </children>
                                    </HBox>
                                </graphic>
                            </Button>
                            <Button fx:id="viewDocButton" styleClass="primary-button">
                                <graphic>
                                    <HBox alignment="CENTER" spacing="5">
                                        <children>
                                            <Label prefHeight="19.0" prefWidth="46.0" text="👁Voir" />
                                        </children>
                                    </HBox>
                                </graphic>
                            </Button>
                            <Button fx:id="deleteDocButton" styleClass="secondary-button">
                                <graphic>
                                    <HBox alignment="CENTER" spacing="5">
                                        <children>
                                            <Label text="Supprimer" />
                                        </children>
                                    </HBox>
                                </graphic>
                            </Button>
                        </children>
                    </HBox>
                    <Label text="Type de document:" />
                    <TextField fx:id="docTypeField" prefHeight="43.0" prefWidth="539.0" promptText="Ex: CIN, Permis, etc." />
                    <Label text="Description:" />
                    <TextField fx:id="docDescField" promptText="Description du document" />
                </children>
            </VBox>
        </VBox>
    </children>
</AnchorPane>